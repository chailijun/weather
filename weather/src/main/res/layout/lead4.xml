<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/tutorial_4_bg" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/tutorial_4_light" />

    <ImageView
        android:id="@+id/iv_guide4_circle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/tutorial_4_circle_1" />

    <ImageView
        android:id="@+id/iv_guide4_finger"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/tutorial_4_finger" />

    <ImageView
        android:id="@+id/iv_guide4_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_start_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp"
        android:scaleType="centerCrop"
        android:src="@drawable/tutorial_4_curve_line" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:scaleType="centerCrop"
        android:src="@drawable/tutorial_4_enter"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_start_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="70dp"
        android:background="@drawable/shape_rect_bg"
        android:onClick="enterMain"
        android:padding="10dp"
        android:text="@string/start_app"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_16" />

    <Button
        android:id="@+id/btn_guide4_enter"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        android:background="#00000000"
        android:onClick="enterMain" />

</RelativeLayout>