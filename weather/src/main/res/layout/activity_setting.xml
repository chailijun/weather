<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/theme_start"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.chailijun.mweather.setting.SettingActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_height">
        <ImageView
            android:id="@+id/iv_title_back"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/top_title_height"
            android:background="@drawable/selector_title_back" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/set"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_18" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_marginLeft="@dimen/marginLeft"
                android:layout_marginRight="@dimen/marginRight"
                android:layout_marginTop="10dp"
                android:background="@color/colorLine"
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_0dot8_dp"/>

            <TextView
                android:id="@+id/tv_setting_theme"
                android:background="@drawable/selector_item_onclick_bg"
                android:paddingLeft="@dimen/marginLeft"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:textSize="@dimen/text_size_16"
                android:textColor="@color/black"
                android:text="@string/setting_theme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View
                android:layout_marginLeft="@dimen/marginLeft"
                android:layout_marginRight="@dimen/marginRight"
                android:background="@color/colorLine"
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_0dot8_dp"/>
            
        </LinearLayout>

    </ScrollView>

</LinearLayout>
